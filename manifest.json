{
  "manifest_version": 3,
  "name": "Regex Search Final",
  "version": "4.0",
  "description": "Stable regex search UI with match list and reliable pane injection.",

  "icons": {
    "16": "regex_icon_16x16.png",
    "32": "regex_icon_32x32.png",
    "48": "regex_icon_48x48.png",
    "128": "regex_icon_128x128.png"
  },

  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-ui": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Toggle search pane"
    }
  },
  "action": {
    "default_icon": "regex_icon_32x32.png"
  }
}
